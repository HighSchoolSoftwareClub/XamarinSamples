<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Views.SignupPage">
  <ContentPage.Content>
    <Grid VerticalOptions="CenterAndExpand">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Entry x:Name="NameSurname" Placeholder="Name Surname" Grid.RowSpan="1"/>
      <Entry x:Name="Username" Placeholder="Username" Grid.Row="1"/>
      <Entry x:Name="Password" IsPassword="True" Grid.Row="2"/>
      <Entry x:Name="RePassword" IsPassword="True" Grid.Row="3"/>
      <Entry x:Name="Email" Placeholder="E-Mail" Grid.Row="4"/>
      <Button Text="Sign Up" Grid.Row="5" Clicked="Signup_Clicked"/>
    </Grid>
  </ContentPage.Content>
</ContentPage>